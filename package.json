{
  "name": "@trashpanda001/helpers",
  "description": "Helpers for my projects.",
  "version": "0.23.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.22.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trashpanda001/helpers.git"
  },
  "author": "Trash Panda <adrian@danieli.org>",
  "homepage": "https://trashpanda001.github.io/helpers/",
  "exports": {
    ".": "./dist/index.js",
    "./array": "./dist/array.js",
    "./comparators": "./dist/comparators.js",
    "./cookie": "./dist/cookie.js",
    "./function": "./dist/function.js",
    "./number": "./dist/number.js",
    "./object": "./dist/object.js",
    "./react": "./dist/react/index.js",
    "./string": "./dist/string.js",
    "./types": "./dist/types.js"
  },
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "src/**/*.ts",
    "dist",
    "!src/**/*.test.ts",
    "!dist/**/*.test.*"
  ],
  "scripts": {
    "build": "tsc",
    "build:all": "pnpm install && pnpm clean && pnpm eslint:check && pnpm prettier:check && pnpm build && pnpm test && pnpm build:docs",
    "build:docs": "typedoc --treatWarningsAsErrors",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist/* tsconfig.tsbuildinfo",
    "docs:local": "open docs/index.html",
    "eslint:check": "eslint --max-warnings=0 .",
    "eslint:fix": "eslint --fix --max-warnings=0 .",
    "loc": "tokei --exclude pnpm-lock.yaml",
    "lint": "pnpm eslint:fix && pnpm prettier:fix && pnpm tsc:check",
    "nuke": "pnpm clean && rm -rf node_modules/ && pnpm install --frozen-lockfile",
    "prepublishOnly": "pnpm build:all",
    "prettier:check": "prettier '**/*.{cjs,cts,css,html,js,json,jsonc,jsx,md,mjs,mts,ts,tsx,yaml}' --check",
    "prettier:fix": "prettier '**/*.{cjs,cts,css,html,js,json,jsonc,jsx,md,mjs,mts,ts,tsx,yaml}' --write",
    "publishd": "pnpm publish --dry-run",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@prettier/plugin-oxc": "^0.0.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/string-natural-compare": "^3.0.4",
    "eslint": "^9.39.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.6.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.10"
  },
  "peerDependencies": {
    "luxon": "^3",
    "react": "^19",
    "react-dom": "^19",
    "string-natural-compare": "^3"
  },
  "peerDependenciesMeta": {
    "luxon": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "string-natural-compare": {
      "optional": true
    }
  }
}
